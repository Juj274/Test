@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<body class="bg-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6">
                                <img src="~/images/alexandr-podvalny-tE7_jvK-_YU-unsplash.jpg" class="card-img">
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form id="account" method="post">
                                        <div class="form-group m-2">
                                            <label asp-for="Input.Email" class="form-label"></label>
                                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group m-2">
                                            <label asp-for="Input.Password" class="form-label"></label>
                                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group m-2">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Remember
                                                    Me
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                        </div>
                                        @*<a href="index.html" class="btn btn-primary btn-user btn-block mt-1">
                                        Login
                                        </a>*@
                                        <hr>

                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp.asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>



</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
